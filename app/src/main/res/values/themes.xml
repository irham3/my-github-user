<resources >
    <!-- Base application theme. -->
    <style name="Theme.MyGithubUser" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/black_darkest</item>
        <item name="colorPrimaryVariant">@color/black_light</item>
        <item name="colorOnPrimary">@color/black_darker</item>
    </style>
    <style name="Theme.MyGithubUser.Fullscreen" parent="Theme.MyGithubUser">
        <item name="android:actionBarStyle">@style/Widget.Theme.MyGithubUser.ActionBar.Fullscreen
        </item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowBackground">@null</item>
    </style>

    <style name="Theme.MyGithubUser.SplashTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_background</item>
        <item name="colorPrimary">@color/black_darkest</item>
        <item name="colorPrimaryVariant">@color/black_light</item>
        <item name="colorOnPrimary">@color/black_darker</item>
        <item name="android:statusBarColor">@color/black</item>
    </style>
</resources>