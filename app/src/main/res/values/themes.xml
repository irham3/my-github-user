<resources >
    <!-- Base application theme. -->
    <style name="Theme.MyGithubUser" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/black_darkest</item>
        <item name="colorPrimaryVariant">@color/black_light</item>
        <item name="colorOnPrimary">@color/black_darker</item>
    </style>

    <style name="Theme.MyGithubUser.SplashTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_background</item>
        <item name="colorPrimary">@color/black_darkest</item>
        <item name="colorPrimaryVariant">@color/black_light</item>
        <item name="colorOnPrimary">@color/black_darker</item>

        <!-- Status bar and Nav bar configs -->
        <item name="android:statusBarColor" >@color/white</item>
        <item name="android:navigationBarColor">@color/white</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>
</resources>